@model btDotNet.Models.Query
@using (Html.BeginForm("Create", "QueryShow")) {
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.QueryId)

        <div class="editor-label">
            Add new Query:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QueryString)
            @Html.ValidationMessageFor(model => model.QueryString)
            <input type="submit" value="Add" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Show Query List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
