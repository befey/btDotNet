@model IEnumerable<btDotNet.Models.NewsItem>

@{
    ViewBag.Title = "NewsItemDb Index";
}

@section database_count {
    <span class="database_count">
        @Html.ActionLink(("Loaded " + Model.Count().ToString() + " items from the database"), "Index", "NewsItemDbShow")
    </span>
}


<h2>@ViewBag.Title</h2>

<table>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.NewsItemId })
            </td>
        </tr>
    }

</table>
