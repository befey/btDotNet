@model IEnumerable<btDotNet.Models.NewsItem>

@{
    ViewBag.Title = "NewsItemDb Index";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NewsItemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.NewsItemId }) |
